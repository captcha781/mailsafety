{
  "name": "mailsafety",
  "version": "1.0.0",
  "description": "An email identifier with mx lookup and disposable mail finder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/captcha781/mailsafety.git"
  },
  "keywords": [
    "mail",
    "mail validator",
    "email",
    "nodemailer",
    "email-validation",
    "mailsafety",
    "safety",
    "transport",
    "dns",
    "mx"
  ],
  "author": "captcha781 <bhuvanesh19112001@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/captcha781/mailsafety/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "codecov": "^3.8.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.5.3"
  },
  "files": [
    "LICENSE",
    "Readme.md",
    "dist/**/*"
  ]
}
